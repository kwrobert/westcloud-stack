[Unit]
Description=dask-scheduler

[Service]
Restart=always
RestartSec=20
TimeoutStartSec=0
User={{ dask_user }}
Group={{ dask_user }}

ExecStart=/home/{{ dask_user }}/.local/bin/dask scheduler --port {{ dask_scheduler_port }} --dashboard-address {{ dask_dashboard_port }} --no-show

[Install]
WantedBy=multi-user.target
